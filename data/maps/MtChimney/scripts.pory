}

movement MtChimney_Movement_PlayerGetOut {
	delay_8
	lock_facing_direction
	walk_up
	unlock_facing_direction
	face_right
	lock_facing_direction
	walk_left
	unlock_facing_direction
	walk_in_place_up
}

movement MtChimney_Movement_LookAround {
	walk_in_place_left
	delay_16
	walk_in_place_down
	delay_16
	walk_in_place_right
	delay_16
	walk_in_place_down
}


