mapscripts MauvilleCity_BattleCafe_MapScripts {
	MAP_SCRIPT_ON_TRANSITION {
		special(SetCafeTrainersToday)
	}
}

// por hacer wip
script MauvilleCity_BattleCafe_Scripts_SetUpDailyTrainersBattle {
	special(DoCafeTrainerBattle)
	delay(16)
	goto(MauvilleCity_BattleCafe_Scripts_DoDailyTrainersBattle)
}
script MauvilleCity_BattleCafe_Scripts_DoDailyTrainersBattle {
	waitbuttonpress
	dotrainerbattle
	delay(16)
	special(GetCafeTrainersAfterBattleData)
	
	if (var(VAR_RESULT) != 0) {
		giveitem(VAR_RESULT, 1)
		special(GetCafeTrainersFinalText)
	}
	closemessage
	releaseall
}

script MauvilleCity_BattleCafe_Scripts_DailyTrainer1 {
	lockall
	faceplayer
	setvar(VAR_0x8000, 0)
	goto (MauvilleCity_BattleCafe_Scripts_SetUpDailyTrainersBattle)
}


