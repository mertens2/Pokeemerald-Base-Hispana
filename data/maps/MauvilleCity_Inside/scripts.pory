mapscripts MauvilleCity_Inside_MapScripts {}


script MauvilleCity_Inside_Scripts_OldMan {
	lockall
	faceplayer
	if (!checkitem(ITEM_TM51)) {
		if (setgetobjectflags(VAR_LAST_TALKED, 2, TRUE, GET_EVENT_FLAG)) {
			msgbox(MauvilleCity_Inside_Text_OldMan3)
			giveitem(ITEM_TM51)
		}
		elif (setgetobjectflags(VAR_LAST_TALKED, 1, TRUE, GET_EVENT_FLAG)) {
			msgbox(MauvilleCity_Inside_Text_OldMan2)
			setgetobjectflags(VAR_LAST_TALKED, 2, TRUE, SET_EVENT_FLAG)
		}
		else {
			msgbox(MauvilleCity_Inside_Text_OldMan1)
			setgetobjectflags(VAR_LAST_TALKED, 1, TRUE, SET_EVENT_FLAG)
		}
	}
	else {
		msgbox(MauvilleCity_Inside_Text_OldManExplainTMRound)
	}
	closemessage
	releaseall
}

